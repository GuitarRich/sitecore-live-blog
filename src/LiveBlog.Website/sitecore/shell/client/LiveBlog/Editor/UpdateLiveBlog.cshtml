@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
	var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
	rendering.Class = "sc-UpdateLiveBlog";
	rendering.Requires.Script("client", "UpdateLiveBlog.js");

	rendering.SetAttribute("data-sc-hubname", rendering.GetString("HubName", "hubName", string.Empty));

	var htmlAttributes = rendering.HtmlAttributes;
}
<div @htmlAttributes>
	<div>
		<div class="container">
			<div id="itemId"></div>
			<fieldset>
				<textarea type="text" id="message" rows="5" cols="80"></textarea>
			</fieldset>
			<fieldset>
				<input type="button" id="sendmessage" value="Send" />
			</fieldset>
			<ul id="discussion"></ul>
		</div>
	</div>
</div>
