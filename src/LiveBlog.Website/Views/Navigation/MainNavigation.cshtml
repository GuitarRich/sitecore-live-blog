@using Sitecore.Links
@model LiveBlog.Website.Model.NavigationViewModel
<nav class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="/">@Html.Sitecore().Field("title", Model.SiteRoot)</a>
		</div>
		<div id="navbar" class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				@foreach (var item in Model.Items)
				{
					var cssClass = "";
					if (Sitecore.Context.Item.ID == item.ID)
					{
						cssClass = "active";
					}
					<li class="@(cssClass)" data-id="@item.ID.ToShortID()"><a href="@LinkManager.GetItemUrl(item)">@Html.Sitecore().Field("Title", item)</a></li>
				}
			</ul>
		</div>
	</div>
</nav>
